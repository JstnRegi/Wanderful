<div class="container">
   <header>
      <div class="page-header">
         <h1>New Travel Log</h1>
      </div>
   </header>

   <div class="page-wrapper">
      <div class="panel panel-info">

         <%= form_for @log, url: city_log_new_path, method: "post" do |f| %>
         
             <% if @log.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@log.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @log.errors.full_messages.each do |msg| %>

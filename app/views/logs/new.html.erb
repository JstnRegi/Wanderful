    </div>
      <% end %>
      <% end %>


            <div class="panel-heading">
            <%= f.text_field :title, placeholder: "Title" %>
            </div>
            <div id="log-form" class="panel-body">
            <%= f.text_field :address, class: "form-input-long", placeholder: 'Address. Ex. "124 Montgomery St, San Francisco, CA"'%><br><br>
            <%= f.text_area :content, :cols => "50", :rows => "10", placeholder: "Article..." %> <br> 
            
            <div class="large-10 large-centered columns">
            <%= f.text_area :all_tags, placeholder: "Tags separated with comma" %>
          </div>
        

            </div>

            <%= f.submit "Post" %>

         <% end %>
      </div>
   </div>
</div>
<div class="container">
   <header>
      <div class="page-header">
         <h1>New Travel Log</h1>
      </div>
   </header>

   <div class="page-wrapper">
      <div class="panel panel-info">
         <div class="panel-heading">
            <%= form_for @log, url: "/cities/#{@city.id}/logs/new", method: "post" do |f| %>
            <div>
               <%= f.text_field :title, placeholder: "Title" %>
            </div>
         </div>
         <div class="panel-body">
            <div>
               <%= f.text_area :content, :cols => "50", :rows => "10", placeholder: "Article..." %>
            </div>
            <div>
               <%= f.submit "Post" %>
            </div>
            <% end %>
         </div>
      </div>
   </div>
</div>



<div class="container">


   <header>
      <div class="page-header">
         <h1>Profile</h1>
      </div>
   </header>

   <h1>Welcome <%= @user.first_name %> <%= @user.last_name[0] %>. </h1>
   <p><small> Account created <%= time_ago_in_words(@user.created_at) %> ago. </small></p>

   <div>
      <% if @user.current_city %>
      <p> Location: <%= @user.current_city %> </p>
      <% else %>
      <p> Location: <strong> Unknown </strong></p>
      <% end %>
   </div>

   <div class="panel panel-warning">
      <div class="panel-heading">
         <h2>Articles</h2>
      </div>
      <div class="panel-body">
         <div>
            <ul>
               <% @user.logs.each do |log| %>
               <li>
                  <div>
                     <a href="/logs/<%= log.id %>"><h3> <%= log.title %> </h3></a>
                     <p><small> <a href="/cities/<%= log.city_id %>"> <%= City.find_by_id(log.city_id).name %> </a></small></p>
                     <p> <%= log.content %> </p>
                     <% if current_user.id == @user.id %>
                        <%= button_to "Delete", log, method: :delete, data: { confirm: 'Are you sure you want to delete this?'} %>
                        <%= link_to "Edit", log_path(log.id) %>
                     <% else %>
                     <% end %>
                  </div>
               </li>
               <% end %>
            </ul>
         </div>
      </div>
   </div>

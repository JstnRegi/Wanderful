
<%= render 'shared/navbar' %>
<div class="container">

   <header>
      <div class="page-header">
         <h1>Profile</h1>
      </div>
   </header>

   <h1>Welcome <%= @user.email %></h1>
   <h3>Account created on <%= @user.created_at %></h3>

   <div>
   <!-- this is where our location will be listed -->
   </div>

   <div class="panel panel-warning">
      <div class="panel-heading">
         <h2>Articles</h2>
      </div>
      <div class="panel-body">
         <div>
            <ul>
               <% @user.posts.each do |post| %>
               <li>
                  <div>
                     <h3><%= post.title %> </h3>
                     <p> <%= post.content %> </p>
                  </div>
               </li>
               <% end %>
            </ul>
         </div>
      </div>
   </div>

</div>

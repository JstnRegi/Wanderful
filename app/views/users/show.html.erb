
<%= render 'shared/navbar' %>
<div class="container">


   <header>
      <div class="page-header">
         <h1>Profile</h1>
      </div>
   </header>

   <h1>Welcome <%= @user.email %></h1>
   <h3>Account created on <%= @user.created_at %></h3>

   <div>
      <% if @user.current_city %>
      <p> Location: <%= @user.current_city %> </p>
      <% else %>
      <p> Location: <strong> Unknown </strong></p>
      <% end %>
   </div>

   <div class="panel panel-warning">
      <div class="panel-heading">
         <h2>Articles</h2>
      </div>
      <div class="panel-body">
         <div>
            <ul>
               <% @user.logs.each do |log| %>
               <li>
                  <div>
                     <h3><%= log.title %> </h3>
                     <p> <%= log.content %> </p>
                  </div>
               </li>
               <% end %>
            </ul>
         </div>
      </div>
   </div>



<div class="container user-page">

   <header>
      <div class="page-header">
         <h1>Welcome <%= @user.first_name %> <%= @user.last_name[0] %>. </h1>
      </div>
   </header>

   <div class="row">
      <div class="col-md-8 col-md-offset-1">

         <div class="media">
   			<div class="media-left pull-left">
               <a href="#">
		            <img class="media-object img-rounded" id="profile-pic" src="/assets/ProfilePic_placeholder.jpg">
               </a>
   			</div>
   			<div class="media-body">

      				<h3 class="media-heading">
                     <% if @user.username %>
                     <%= @user.username %>
                     <% else %>
                     <a href="/users/<%= @user.id %>/edit"><small> Edit Profile  </small></a>
                     <% end %>
                  </h3>

                  <% if @user.current_city %>
                  Location: <strong> <%= @user.current_city %> </strong>
                  <% else %>
                  Location: <strong> Unknown </strong>
                  <% end %>
                  <p><small> Member since: <%= time_ago_in_words(@user.created_at) %> ago. </small></p>
   			</div>
   		</div>

      </div>
   </div>
   <br/>

   <div class="panel" id="logs-wrap">
      <div class="panel-heading" id="log-header">
         <h2>Travel Logs</h2>
      </div>
      <div class="panel-body">
         <div>
            <ul class="list-group">
               <% @user.logs.each do |log| %>

               <li class="list-group-item" id="logs-body">
                  <div class="panel panel-default">
                     <div class="panel-heading">
                        <a href="/logs/<%= log.id %>"><h3 class="text-capitalize"> <%= log.title %> </h3></a>
                     </div>
                     <div class="panel-body">
                        <p><small> City: <a href="/cities/<%= log.city_id %>"> <%= City.find_by_id(log.city_id).name %> </a></small></p>
                        <p> <%= log.content %> </p>
                     </div>
                     <div class="tags" id="log-tags">
                        <p><%=raw tag_links(log.all_tags) %></p>
                     </div>
                     <div class="panel-footer">

                        <% if current_user.id == @user.id %>
                        <div class="row">
                           <div class="col-md-1">
                              <button class="btn btn-xs btn-default" type="button"> <%= link_to "Edit", log_path(log.id) %> </button>
                           </div>
                           <div class="col-md-1 col-md-offset-10" >
                                 <%= button_to "Delete", log, method: :delete, type: "button", class: "btn btn-xs btn-danger", data: { confirm: 'Are you sure you want to delete this?'} %>
                           </div>
                        </div>
                        <% else %>
                        <% end %>
                     </div>

                  </div>
               </li>
               <% end %>
            </ul>
         </div>
      </div>
   </div>

   <a href="/users/<%= @user.id %>/edit"><button class="btn btn-block" id="edit-btn"> Edit Profile </button></a>

   <footer>
      <div class="row">
         <div class="col-md-2 col-md-offset-5" id="footer">
            <h5>Wanderful</h5>
         </div>
      </div>
   </footer>
</div>


















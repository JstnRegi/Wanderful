<div class="container">
	<div class="page-header">
		<header>
			<h1> <%= @city.name %> </h1>
		</header>
	</div>

<div class="page-container">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h2>Travel Logs</h2>
			</div>

			<div class="panel-body">
				<% @logs = @city.logs.all.order("id DESC") %>
				<% @logs.each do |log| %>
				<% @user = log.user %>
				<div>
					<a href="/logs/<%= log.id %>"><h4> <%= log.title %> </h4></a>

					<h5> By: <%= @user.first_name %> <%= @user.last_name[0] %>. </h5>

					<p> <%= log.content.truncate_words(10) %> <a href="/logs/<%= log.id %>"><small>(View More)</small></a>	</p>
				</div>
				<% end %>
			</div>
		</div>
		<%= link_to("Post Travel Log", city_log_new_path(@city)) %>
	</div>
</div>
